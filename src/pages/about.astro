---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { useTranslations } from "@/i18n/utils";

const t = useTranslations("en");
---

<BaseLayout title={t("about.title")} lang="en">
  <h1 class="mb-8">{t("about.heading")}</h1>

  <div class="article-content">
    <p>{t("about.content")}</p>

    <h2>{t("about.stack.heading")}</h2>
    <p>{t("about.stack.content")}</p>
  </div>
</BaseLayout>
