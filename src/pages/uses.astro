---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { useTranslations } from "@/i18n/utils";

const t = useTranslations("en");
---

<BaseLayout title={t("uses.title")} lang="en">
  <h1 class="mb-4">{t("uses.heading")}</h1>
  <p class="text-secondary mb-10">{t("uses.intro")}</p>

  <div class="article-content">
    <h2>{t("uses.hardware")}</h2>
    <ul>
      <li>MacBook Pro 16"</li>
      <li>LG 27US500-W</li>
      <li>Logitech MX Mechanical Mini (Tactile)</li>
      <li>Logitech MX Master 3S</li>
    </ul>

    <h2>{t("uses.dev")}</h2>
    <ul>
      <li>Claude Code MAX</li>
      <li>PhpStorm</li>
      <li>VS Code</li>
      <li>Warp terminal</li>
      <li>Docker Desktop</li>
    </ul>

    <h2>{t("uses.software")}</h2>
    <ul>
      <li>Brave / Chrome</li>
      <li>Notion</li>
      <li>Todoist</li>
      <li>Raycast</li>
    </ul>

    <h2>{t("uses.services")}</h2>
    <ul>
      <li>GitHub</li>
      <li>Jira</li>
      <li>Confluence</li>
      <li>Vercel</li>
      <li>Supabase</li>
    </ul>

    <h2>{t("uses.audio")}</h2>
    <ul>
      <li>AirPods Pro</li>
    </ul>
  </div>
</BaseLayout>
