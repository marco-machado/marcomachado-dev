import { useTranslations, formatDate } from "@/i18n/utils";

const t = useTranslations("en");
const lastUpdated = new Date("2025-02-21");
---

<BaseLayout title={t("now.title")} lang="en">
  <h1 class="mb-2">{t("now.heading")}</h1>
  <p class="text-sm text-muted font-[var(--font-mono)] mb-8">
    {t("now.updated")}: {formatDate(lastUpdated, "en")}
  </p>

  <div class="article-content">
    <p>{t("now.intro")}</p>

    <h2>Work</h2>
    <p>Building software, shipping features, learning new patterns.</p>

