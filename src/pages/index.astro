---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { useTranslations, getLocalizedPath } from "@/i18n/utils";

const t = useTranslations("en");
---

<BaseLayout title={t("nav.home")} description={t("site.description")} lang="en">
  <section class="py-12">
    <h1 class="text-4xl mb-6">{t("home.greeting")}</h1>
    <p class="text-lg text-secondary leading-relaxed max-w-xl">
      {t("home.intro")}
    </p>
    <div class="mt-6 flex items-center gap-6">
      <a
        href={getLocalizedPath("en", "blog")}
        class="inline-block px-4 py-1.5 bg-[var(--color-accent)] dark:bg-[var(--color-accent-dark)] text-white dark:text-[var(--color-paper-dark)] text-sm font-medium rounded-full no-underline hover:bg-[var(--color-accent-hover)] dark:hover:bg-[var(--color-accent-hover-dark)] transition-colors"
      >
        {t("home.cta.blog")} &rarr;
      </a>
      <a
        href={getLocalizedPath("en", "about")}
        class="text-sm text-secondary no-underline hover:underline"
      >
        {t("home.cta.about")}
      </a>
    </div>
  </section>
</BaseLayout>
