---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const year = new Date().getFullYear();
---

<footer
  class="w-full max-w-2xl mx-auto px-6 py-12 mt-16 border-t border-[var(--color-rule)] dark:border-[var(--color-rule-dark)]"
>
  <div class="flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-muted">
    <span>&copy; {year} Marco Machado. {t("footer.rights")}</span>
    <div class="flex items-center gap-5">
      <a
        href="https://github.com/marcomachado"
        target="_blank"
        rel="noopener noreferrer"
        class="text-[var(--color-ink-muted)] hover:text-[var(--color-ink)] dark:text-[var(--color-ink-muted-dark)] dark:hover:text-[var(--color-ink-dark)] no-underline transition-colors"
        aria-label="GitHub"
      >
        GitHub
      </a>
      <a
        href="https://linkedin.com/in/marcomachado"
        target="_blank"
        rel="noopener noreferrer"
        class="text-[var(--color-ink-muted)] hover:text-[var(--color-ink)] dark:text-[var(--color-ink-muted-dark)] dark:hover:text-[var(--color-ink-dark)] no-underline transition-colors"
        aria-label="LinkedIn"
      >
        LinkedIn
      </a>
      <a
        href="https://x.com/marcomachado"
        target="_blank"
        rel="noopener noreferrer"
        class="text-[var(--color-ink-muted)] hover:text-[var(--color-ink)] dark:text-[var(--color-ink-muted-dark)] dark:hover:text-[var(--color-ink-dark)] no-underline transition-colors"
        aria-label="X"
      >
        X
      </a>
    </div>
  </div>
</footer>
